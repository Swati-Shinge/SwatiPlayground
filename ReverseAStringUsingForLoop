package JavaBasicPrograms;

public class ReverseAStringUsingForLoop {

	// String is a immutable in java
	// In string there will be no reverse method functions

	public static void main(String[] args) {
		String s = "Selenium";
		int len = s.length();// 8
		String rev = "";

		// using for loop
		for (int i = len - 1; i >= 0; i--) {
			rev = rev + s.charAt(i);
		}

		System.out.println(rev);
	}

}
